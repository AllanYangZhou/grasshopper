{
  "manifest_version": 2,

  "name": "Grasshopper",
  "description": "This extension will send the current URL to another extension",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  "permissions": [
   "activeTab", "gcm", "tabs",
   "storage", "downloads", "notifications"
  ],
  "background": {
    "scripts": ["js/background.js"],
    "persistence": false
  },
  "content_scripts": [
    {
    "all_frames": false,
    "matches": ["<all_urls>"],
    "exclude_matches": [],
      "js": [
        "js/jquery.min.js"
      ]
    }
  ]
}
